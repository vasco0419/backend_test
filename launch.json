{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Express with Nodemon",
            "runtimeExecutable": "nodemon",
            "program": "${workspaceFolder}/src/server.ts",
            "restart": true,
            "env": {
                "NODE_ENV": "development"
            },
            "console": "integratedTerminal"
        }
    ]
}
  